<div>   
    <div class="token-selector-grid">
        {{#each tokens}}
        <div class="token-select" data-action="chooseTokenAction" data-id="{{this.id}}">
            <img src="{{this.img}}" alt="{{this.name}}" width="128" height="128" title="{{this.name}}">
            <div class="token-statuses">                
                {{#each actor.effects}}
                {{#if this.disabled}}
                   <!-- disabled -->
                {{else}}
                <div class="token-status">
                    <img class="icon" src="{{this.img}}" alt="{{this.name}}" title="{{this.name}}" width="24" height="24"/>
                </div>
                {{/if}}
                {{/each}}
            </div>            
            <div class="token-name">
                {{this.name}}
                {{#if this.distance}}
                <div class="token-distance">({{this.distance}}m)</div>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
</div>